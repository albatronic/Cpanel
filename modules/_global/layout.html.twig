{% import "_global/macros.html.twig" as macro %}

<!DOCTYPE HTML>
<html>

    <head>
    	{% include "_global/metaInformacion.html.twig" %}
	{% include values.twigCss %}

        <!-- Para que estÃ© disponible el path de la app en todos los java scripts -->
        <script type="text/javascript">var appPath = "{{app.path}}";</script>

	{% include values.twigJs %}
    </head>

    <body id="theme-default" class="full_block">

        <div id="left_bar">

            {% include "_global/menuIconosIzquierda.html.twig" %}
            {% include "_global/menuInferiorIzquierda.html.twig" %}
            {% include "_global/menuIzquierda.html.twig" %}

        </div>

        <div class="page_title_user">
            <form name="projectsForm" id="projectsForm" method="POST">
                <input name="controller" value ="index" type="hidden" />
                <input name="action" value="changeProject" type="hidden"/>
                <select class="projectsSelector" name="project" id="projectsSelector" onclick="submit();">
                {% for key,value in projects %}
                    <option value="{{key}}" {% if key == project.name %} SELECTED{% endif %}>{{value.title}}</option>
                {% endfor %}
            </select>
            </form>
            | {{user.NombreApellidos}} &nbsp;&nbsp;
	</div>

        <div id="container">

                <div id="header" class="blue_lin">
                    <div class="header_left">
                        <div class="logo">
                            <img src="{{app.path}}/images/logo.png"  alt="">
                        </div>
                    </div>

                    <div class="header_right">
                    {% include "_global/headerRight.html.twig" %}
                    </div>
                </div>

                <div class="page_title">
                    {% include '_global/menuNavegador.html.twig' %}
                </div>

                <div id="content">
                    {% block content %}
                    {% endblock %}
                </div>

        </div>

        {% if values._debugMode %}
        <div style="clear: both;">
            <pre>{{values._debugValues}}</pre>
        </div>
        {% endif %}

    </body>
</html>