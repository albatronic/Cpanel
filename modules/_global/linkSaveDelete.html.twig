{# Template para los comandos Guardar y Borrar registro #}
{% if values.permisos.permisosModulo['UP'] %}
<a href="#" onclick="$('#accion_{{values.controller}}').val('Guardar'); submitForm('manto_{{ values.controller}}');" title="Guardar">
    <img src="{{app.path}}/images/barraherramientas/save_cmd.png" alt="Guardar" title="Guardar" />
</a>
{% endif %}

{% if values.permisos.permisosModulo['DE'] %}
<script>
$(function() {    
    $("#confirmacionBorrado").dialog({
        autoOpen: false,
        dialogClass: "",
        resizable: false,
        height: 150,
        modal: true,
        buttons: {
            Aceptar: function() {
                $('#accion_{{values.controller}}').val('Borrar');
                submitForm('manto_{{ values.controller}}');                
                $( this ).dialog( "close" );
            },          
            Cancelar: function() {
                $( this ).dialog( "close" );
            }
        }
    });
});
</script>
<div id="confirmacionBorrado" title="Borrar registro"><p>Â¿Realmente desea borrar el registro?</p></div>
<a href="#" title="Borrar" onclick="$('#confirmacionBorrado').dialog('open');">
    <img src="{{app.path}}/images/barraherramientas/trash_cmd.png" alt="Borrar" title="Borrar" />
</a>
{% endif %}
