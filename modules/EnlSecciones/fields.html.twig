<div id="tabs1" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top"><a href="#tabs1-arbol">Árbol de Secciones</a></li>
        <li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active"><a href="#tabs1-seccion">Sección</a></li>     
    </ul>

    <div id="tabs1-arbol" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {% include '_global/arbol.html.twig' %}
    </div>        
    <div id="tabs1-seccion" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {% if datos.NivelJerarquico %}Nivel Jerárquico {{datos.NivelJerarquico}}{% endif %}
        {{ macro.input(atributos.Titulo,'field_title','text',values.controller ~ '[Titulo]',values.controller ~ '_Titulo',datos.Titulo,'255','CampoTextoLargo','1') }}
        {{ macro.input(atributos.Subtitulo,'field_title','text',values.controller ~ '[Subtitulo]',values.controller ~ '_Subtitulo',datos.Subtitulo,'255','CampoTextoLargo','2') }}
        {{ macro.textarea(atributos.Resumen,'field_title',values.controller ~ '[Resumen]',values.controller ~ '_Resumen',datos.Resumen,none,none,'textarea','3')}}
        {{ macro.radio(atributos.IdTipo,'field_title',values.controller ~ '[IdTipo]',values.controller ~ '_IdTipo',datos.IdTipo.IDTipo,datos.IdTipo.fetchAll('Descripcion',0),'chzn-radio','4')}}

        {% include '_global/fieldsComunes.html.twig' %}
    </div>
</div>
{{ macro.foco(values.controller ~ '_Titulo') }}
