{{ macro.input(atributos.Proyecto,'field_title','text',values.controller ~ '[Proyecto]',values.controller ~ '_Proyecto',datos.Proyecto,'100','CampoTextoLargo','2') }}

<div id="tabs" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active"><a href="#tabs-general">General</a></li>
        {% if datos.Id %}
            <li class="ui-state-default ui-corner-top"><a href="#tabs-aplicaciones">Aplicaciones</a></li>
        {% endif %}
    </ul>

    {# SOLAPA GENERAL #}
    <div id="tabs-general" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input(atributos.Presupuesto,'field_title','text',values.controller ~ '[Presupuesto]',values.controller ~ '_Presupuesto',datos.Presupuesto,'10','CampoImporte','3') }}
        {{ macro.input(atributos.HorasPrevistas,'field_title','text',values.controller ~ '[HorasPrevistas]',values.controller ~ '_HorasPrevistas',datos.HorasPrevistas,'10','CampoImporte','4') }}
        {{ macro.input(atributos.HorasReales,'field_title','text',values.controller ~ '[HorasReales]',values.controller ~ '_HorasReales',datos.HorasReales,'10','CampoImporte','5') }}
        {{ macro.fecha(atributos.FechaInicio,'field_title',values.controller ~ '[FechaInicio]',values.controller ~ '_FechaInicio',datos.FechaInicio,'10','datepicker','6')}}
        {{ macro.fecha(atributos.FechaFinPrevista,'field_title',values.controller ~ '[FechaFinPrevista]',values.controller ~ '_FechaFinPrevista',datos.FechaFinPrevista,'10','datepicker','7')}}
        {{ macro.input(atributos.ResponsableAE,'field_title','text',values.controller ~ '[ResponsableAE]',values.controller ~ '_ResponsableAE',datos.ResponsableAE,'255','CampoTextoLargo','8') }}
        {{ macro.input(atributos.ResponsableCliente,'field_title','text',values.controller ~ '[ResponsableCliente]',values.controller ~ '_ResponsableCliente',datos.ResponsableCliente,'255','CampoTextoLargo','9') }}

        {# include '_global/fieldsComunes.html.twig' #}
    </div>
        
    {# SOLAPA APLICACIONES #}
    {% if datos.Id %}        
        <div id="tabs-aplicaciones" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
            <iframe width="100%" height="420" scrolling="yes" style="border:0px;margin-bottom:10px;margin-top:0px;"
                    src="{{app.path}}/PcaeProyectosApps/list/{{datos.Id}}">
            </iframe>        
        </div>
    {% endif %}
        
{{ macro.foco(values.controller ~ '_Proyecto') }}
