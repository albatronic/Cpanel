{# ARBOL DE CATEGORIAS Y ANIMALES #}

<ul class="arbol">
{% for keyPadre,padre in arbol %}
    <li class="arbol">
        {% include 'AnmAnimales/arbolPadre.html.twig' with {'key':keyPadre,'categoria': padre, 'subtemplate':subtemplate} %}
    </li>
    <ul class="arbol">
        {% for keyHijo,hijo in padre.hijos %}
            <li class="arbol">
                {% include 'AnmAnimales/arbolPadre.html.twig' with {'key':keyHijo,'categoria': hijo, 'subtemplate':subtemplate} %}
            </li>
            <ul class="arbol">
                {% for keyNieto,nieto in hijo.hijos %}
                    <li class="arbol">
                        {% include 'AnmAnimales/arbolPadre.html.twig' with {'key':keyNieto,'categoria': nieto, 'subtemplate':subtemplate} %}
                    </li>
                {% endfor %}
            </ul>                        
        {% endfor %}
    </ul>
{% endfor %}
</ul>
