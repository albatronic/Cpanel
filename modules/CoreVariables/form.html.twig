{% extends values.controller ~ '/index.html.twig' %}

{% set action = 'edit' %}

{% block mantenimiento %}
<div class="grid_container">
    <div class="grid_12 full_block">
        <div class="widget_wrap">
        <div class="widget_content">
	<form name="manto_{{ values.controller}}" id="manto_{{ values.controller }}" action="" method="POST" class="form_container left_label">
		<input name="controller" value="{{ values.controller }}" type="hidden" />
                <input name="action" id="action_{{ values.controller }}" value="{{action}}" type="hidden" />
		<input name="accion" id="accion_{{ values.controller }}" value="" type="hidden" />
                <input name="tipo" value="{{ values.tipo }}" type="hidden" />
                <input name="ambito" value="{{ values.ambito }}" type="hidden" />
                <input name="nombre" value="{{ values.nombre }}" type="hidden" />
                <input name="archivoDatos" value="{{ values.archivoDatos}}" type="text" readonly/>

		{% include '_global/formErrores.html.twig' with {'errores': values.errores} %}
		{% include '_global/alertas.html.twig' with {'alertas': values.alertas} %}

		<ul>
                    {% include values.template %}
		</ul>

		<ul>
                    <h4>CREAR VARIABLE</h4>
                    {{ macro.input({'caption':'Nombre','visible':'1','varEnv':'0'},'field_title','text','nueva[name]','nueva_name',none,'25','CampoTextoCorto','1') }}
                    {{ macro.input({'caption':'Caption','visible':'1','varEnv':'0'},'field_title','text','nueva[caption]','nueva_caption',none,'25','CampoTextoCorto','1') }}
                    {{ macro.input({'caption':'Valor','visible':'1','varEnv':'0'},'field_title','text','nueva[value]','nueva_value',none,'25','CampoTextoCorto','1') }}
                    <input name="" type="submit" value="Crear" onclick="getElementById('action_{{ values.controller }}').value='new'; submitForm('manto_{{ values.controller }}');" />
                </ul>
	</form>
        </div>
        </div>
    </div>
</div>
{% endblock %}